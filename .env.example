# Environment Configuration for Quantitative Trading Platform
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_platform
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# API Keys for Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
YAHOO_FINANCE_API_KEY=optional_key
IEX_CLOUD_API_KEY=your_iex_cloud_key
QUANDL_API_KEY=your_quandl_key

# Trading Configuration
INITIAL_CAPITAL=100000
MAX_POSITION_SIZE=0.02
COMMISSION_RATE=0.001
SLIPPAGE_RATE=0.0005

# Risk Management
MAX_DAILY_LOSS=0.03
MAX_DRAWDOWN=0.05
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.04

# Model Configuration
LSTM_SEQUENCE_LENGTH=60
LSTM_HIDDEN_SIZE=128
TRANSFORMER_D_MODEL=256
ENSEMBLE_THRESHOLD=0.6

# Monitoring and Alerting
PROMETHEUS_PORT=8090
GRAFANA_PORT=3000
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourcompany.com

# Tableau Configuration
TABLEAU_SERVER_URL=https://your-tableau-server.com
TABLEAU_USERNAME=your_tableau_user
TABLEAU_PASSWORD=your_tableau_password
TABLEAU_SITE_ID=your_site_id

# Security
JWT_SECRET_KEY=your_very_long_random_jwt_secret_key_here
API_RATE_LIMIT=100
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/trading_platform.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Development/Production
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Docker Configuration
COMPOSE_PROJECT_NAME=trading_platform
DOCKER_REGISTRY=your-registry.com

# Backup and Recovery
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Performance Monitoring
TARGET_LATENCY_MS=50
TARGET_THROUGHPUT_TPS=1000000
MEMORY_LIMIT_MB=2048
CPU_LIMIT_CORES=4
